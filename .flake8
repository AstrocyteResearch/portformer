[flake8]
max-line-length = 88
max-complexity = 18
select = B,C,E,F,W,T4,B9
ignore = E203, E266, E501, W503, F403, E743, E741
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    ./deploy/test_install.py,
    ./ar_analysis/deploy/test_install.py,
    profile_nbserver,
    .pytest_cache,
    .vscode,
    astrocyte.egg-info,
    portformer-scoring-venv,
    # This contains our built documentation
    build,
    # This contains builds of flake8 that we don't want to check
    dist,
    # This is work in progress
    ./ar_analysis/optimizer/backtester.py,
    ./ar_portformer/deprec_portformer.py,
    ./examples/ar_portformer/check_for_missing_tickers.py
